.news
  .news-info
    #{info}, #{Russian::strftime(news.created_at, '%e %B %Y')}
  .news-title
    = news.title
  - if news.image.present?
    .news-image
      = image_tag news.image_url(:medium)
  .news-desc
    = news.grow_descript
  - if news.type == 'article'
    .news-link_show
      = link_to 'Подробнее', events_show_path(news.id)
